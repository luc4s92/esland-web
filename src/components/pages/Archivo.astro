---
import { getI18N } from "@/i18n";
import Layout from "@/layouts/Layout.astro";
import HeroContainer from "../HeroContainer.astro";
import Button from "@/components/Button.astro";
import Numbers from "@/components/Numbers.astro";


const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<Layout
  title={i18n.SEO.ARCHIVO_TITLE}
  description={i18n.SEO.ARCHIVO_DESCRIPTION}
>

<HeroContainer img="/archivo-background.webp" >
  <h1 class="text-6xl font-medium mb-20 font-tomaso tracking-wider uppercase">{i18n.ARCHIVO.HERO_TITLE}</h1>
        <Button
        class="animate-fade-up"
            url="https://www.youtube.com/watch?v=1YmpPrqKP-g"
        >
            {i18n.ARCHIVO.HERO_BUTTON}
        </Button>
</HeroContainer>
<main>
  <Numbers/>
</main>
</Layout>